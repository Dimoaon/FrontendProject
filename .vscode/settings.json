{
    "i18n-ally.localesPaths": [
        "public/locales",
        "src/shared/config/i18n"
    ],
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "stylelint.enable": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "never",
        "source.fixAll.stylelint": "never",
    },
    "stylelint.validate": [
    "css",
    "scss",
    "sass",
    "less"
  ]
}